# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
# Change these settings to your own preference
indent_style = space
indent_size = 4

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.feature]
indent_size = 2

[*.go]
indent_style = tab

[*.js]
indent_size = 2

[*.json]
indent_size = 2
[composer.json]
indent_size = 4

[*.md]
indent_size = unset

[*.sh]
indent_style = tab

[*.{yaml,yml}]
indent_size = 2
trim_trailing_whitespace = false

[.gitmodules]
indent_style = tab

[Dockerfile]
indent_style = tab

[Makefile]
indent_style = tab

[package.json]
indent_size = 2

[Gopkg.*]
indent_size = 2
