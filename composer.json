{
    "autoload": {
        "psr-4": {
            "antonmarin\\TraceablePDO\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "antonmarin\\TraceablePDOTests\\": "tests/"
        }
    },
    "name": "antonmarin/traceable-pdo",
    "description": "Wrapper for PDO that adds trace of statement source to analyze slow SQL statements in real-time",
    "keywords": ["PDO", "trace", "SQL"],
    "minimum-stability": "stable",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Anton Marin",
            "email": "antonaryo85@gmail.com"
        }
    ],
    "require": {
        "ext-pdo": "*",
        "php": "^5.6 || ^7.0",
        "ext-zlib": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "ext-pdo_sqlite": "*",
        "codeclimate/php-test-reporter": "^0.4.1"
    }
}
